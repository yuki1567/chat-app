<div class= "chat-header">
  <div class= "left-header">
    <div class= "header-room-name">
      testroom
    </div>
  </div>
  <div class= "right-header">
    <div class= "header-button">
      <a href= "#">チャットを終了する</a>
    </div>
  </div>
</div>
<div class= "messages">
  <div class= "message">
    <div class= "top-message">
      <div class= "message-user">Tom</div>
      <div class= "message-date">2020/3/31(Wed) 12:43:30</div>
    </div>
    <div class= "under-message">
      <div class= "message-text">おはよう</div>
    </div>
  </div>

  <div class= "message">
    <div class= "top-message">
      <div class= "message-user">Emi</div>
      <div class= "message-date">2020/3/31(Wed) 11:43:30</div>
    </div>
    <div class= "under-message">
      <div class= "message-text">こんにちは</div>
    </div>
  </div>
</div>
<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class= "form-input">
    <%= f.text_field :content, class: 'form-message', plaseholder: 'type a message' %>
    <label class= "form-image">
      <span class= "image-file">画像</span>
      <input type= "file" class= "hidden">
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>